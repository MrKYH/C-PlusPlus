#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    float earn;
    float amount = 10000;
    float interest = .03;
    for(int day = 1; day <=20; day++){
        earn = amount * pow(1+interest,day);
        cout << "Day: "<<day << "----- Total Amount: $" << earn <<endl;
    }
    return 0;
}
